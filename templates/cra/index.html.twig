{% extends 'layout.html.twig' %}
{% block title %}CRA{% endblock %}
{% block body %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Tableau de bord </a>
            </li>
            <li class="breadcrumb-item active">
                Saisie du compte rendu d'activité
            </li>
        </ol>
        <!-- Page Content -->

        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Filtrer par date</div>
            <div class="card-body">
                <form class="form-inline float-left" method="post" action="{{ path('cra') }}">
                    <div class="form-group">
                        <label for="cra_date_filter" class="col-form-label mr-4">Date <small> (*)</small> : </label>
                        <div class='input-group date form-group' id='filter'>
                            <input type='text' class="form-control" id="cra_date_filter" name="date" value="{{ start |date('m-Y') }}" onchange="this.form.submit()">
                            <span class="input-group-addon icon">
                                                 <span class="fas fa-calendar"></span>
                                                 </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary ml-4" value="Filter">

                    </div>

                    <div>
                    </div>

                </form>
                <div class="float-right">
                    <button class="btn btn-block btn-dark" data-toggle="modal" data-target="#pointModal"><i class="fas fa-plus"></i> Pointé Un autre Client</button>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Les Clients</div>
            <div class="card-body">
                {% set start_date = start| date('01-m-Y') %}
                {% set end_date = start | date('t-m-Y') %}
                {% include 'cra/table_cra.html.twig' %}
                {% include 'cra/modal_fom_cra.html.twig' %}
                {% include 'cra/modal_pointage_client.html.twig' %}

            </div>
        </div>
    </div>
{% endblock %}
