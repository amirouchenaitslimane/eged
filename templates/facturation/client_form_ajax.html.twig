


<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="{{ asset('images/loader.gif') }}" alt="" class="loader img-fluid" id="loader">
                <div class="col-md-12">
                    <div class="card-body">
                        {{ form_start(form, {'action': path('client_add_ajax'), 'method': 'POST','attr': {'id': 'client_add'}}) }}
                        <div class="col-md-8">
                            <div class="form-group">
                                {{ form_label(form.nom,'Nom de client *') }}
                                {{ form_widget(form.nom) }}
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                {{ form_label(form.addresse,'Addresse de client * ') }}
                                {{ form_widget(form.addresse) }}
                            </div>

                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                {{ form_label(form.email,'Email de client') }} <small class="text-success">( Optionel )</small>
                                {{ form_widget(form.email) }}
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                {{ form_label(form.telephone,'Téléphone de client') }} <small class="text-success">( Optionel )</small>
                                {{ form_widget(form.telephone) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {{ form_row(form.save,{'attr':{'class':'btn btn-success mt-3','id':'save_client'},'label':'Enregistrer'}) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
<script>
    var url = '{{ url('client_add_ajax') }}';
</script>