
<div class="card-body">

    <div class="row">
        <div class="col-md-6">
            {{ form_errors(form) }}
        </div>
        <div class="col-md-12">
            <div class="row">

                <div class="col-md-6">
                    {{ form_start(form) }}

                    <div class="col-sm-12">
                        {{ form_label(form.date, 'Date *', {'label_attr': {'id': 'recipient-name'}}) }}

                        <div class='input-group date' id='datetimepicker1'>
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-addon icon">
                                                 <span class="fas fa-calendar"></span>
                                                 </span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        {{ form_label(form.intitule,'Intitul√© *' )}}
                        {{ form_widget(form.intitule, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.intitule) }}
                    </div>
                    <div class="col-sm-12">
                        {{ form_label(form.type,'Etat de document' )}}
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}})}}
                        {{ form_errors(form.type) }}
                    </div>
                    <div class="col-sm-12 mt-4">
                        {{ form_label(form.file,'Fichier *' )}}
                        {{ form_widget(form.file,{'attr': {'id':'image_file'}})}}
                        <small class="text-danger">{{ form_errors(form.file) }}</small>
                    </div>

                </div>
                <div class="col-md-6">
                    <div id="reader_2" class="mt-4">
                        {% if document is defined %}
                            <div id="reder_2" class="mt-4">
                                <object data=" {{ vich_uploader_asset(document, 'file') }}" type="application/pdf" width="100%" height="440px">

                                </object>
                            </div>
                        {% endif %}

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="card-footer">
    <a href="{{ path('document') }}" class="btn btn-success float-left"><< Retour a la liste des documments</a>

    <div class="float-right">

        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'},'label':'Enregistrer'}) }}
    </div>


</div>
{{ form_rest(form) }}
{{ form_end(form) }}
</div>
