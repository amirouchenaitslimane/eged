
<div class="card-body">

    <div class="row">
        <div class="col-md-6">
{{ form_errors(form) }}
        </div>
        <div class="col-md-12">
            <div class="row">

                <div class="col-md-6">
                    {{ form_start(form) }}

                    <div class="col-sm-12">
                        {{ form_label(form.date, 'Date *', {'label_attr': {'id': 'recipient-name'}}) }}

                        <div class='input-group date' id='datetimepicker1'>
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            <span class="input-group-addon icon">
                                                 <span class="fas fa-calendar"></span>
                                                 </span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        {{ form_label(form.libelle,'Libelle frais *' )}}
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.libelle) }}
                    </div>
                    <div class="col-sm-12">
                        {{ form_label(form.etat,'Etat ' )}}
                        {{ form_widget(form.etat, {'attr': {'class': 'form-control'}})}}
                        {{ form_errors(form.etat) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.type,'Type *' )}}
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}})}}
                        {{ form_errors(form.type) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.montant_ttc,'Montant TTC *' )}}
                        {{ form_widget(form.montant_ttc, {'attr': {'class': 'form-control'}})}}
                        {{ form_errors(form.montant_ttc) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.taxe,'Taxe *' )}}
                        {{ form_widget(form.taxe, {'attr': {'class': 'form-control'}})}}
                        {{ form_errors(form.taxe) }}
                    </div>

                    <div class="col-sm-12">
                        {{ form_label(form.montant_ht,'Montant HT *' )}}
                        {{ form_widget(form.montant_ht, {'attr': {'class': 'form-control'}})}}
                    </div>

                    <div class="col-sm-12 mt-4">
                        {{ form_label(form.fichier,'Justificatif *' )}}
                        {{ form_widget(form.fichier,{'attr': {'id':'image_file'}})}}
                        <small class="text-danger">{{ form_errors(form.fichier) }}</small>
                    </div>

                </div>
                <div class="col-md-6">
                    <div id="reder" class="mt-4">
                        {% if frais is defined %}
                            <div id="reder_2" class="mt-4">
                                <object data=" {{ vich_uploader_asset(frais, 'fichier') }}" type="application/pdf" width="100%" height="440px">

                                </object>
                            </div>
                        {% endif %}

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="card-footer">
    <a href="{{ path('frais') }}" class="btn btn-success float-left"><< Retour a la liste des frais</a>

    <div class="float-right">

        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'},'label':'Enregistrer'}) }}
    </div>


</div>
{{ form_rest(form) }}
{{ form_end(form) }}
</div>
