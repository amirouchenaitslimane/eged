{% extends 'login_layout.html.twig' %}
{% block title %}Login{% endblock %}
{% block body %}
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Login</div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="text" id="utilisateur" class="form-control" placeholder="Login ..." required="required" autofocus="autofocus">
                        <label for="utilisateur">Login:</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="password" id="inputPassword" class="form-control" placeholder="mot de pass" required="required">
                        <label for="inputPassword">Mot de passe</label>
                    </div>
                </div>

                <a class="btn btn-primary btn-block" href="index.html">Login</a>
            </form>

        </div>
    </div>
{% endblock %}