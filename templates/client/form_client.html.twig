<div class="card-body">
    {{ form_start(form) }}
    <div class="col-md-8">
       <div class="form-group">
           {{ form_label(form.nom,'Nom de client *') }}
           {{ form_widget(form.nom) }}
       </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            {{ form_label(form.addresse,'Addresse de client * ') }}
            {{ form_widget(form.addresse) }}
        </div>

    </div>
<div class="col-md-8">
    <div class="form-group">
    {{ form_label(form.email,'Email de client') }} <small class="text-success">( Optionel )</small>
    {{ form_widget(form.email) }}
    </div>
</div>
    <div class="col-md-8">
        <div class="form-group">
        {{ form_label(form.telephone,'Téléphone de client') }} <small class="text-success">( Optionel )</small>
        {{ form_widget(form.telephone) }}
        </div>
    </div>


</div>
<div class="card-footer">
    <div class="col-md-8">
        <a href="{{ path('client') }}" class="btn btn-success float-left"><< Retour a la liste des clients</a>
        <div class="float-right">
            {{ form_row(form.save) }}
        </div>
    </div>
</div>

{{ form_end(form) }}